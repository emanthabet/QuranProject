<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_background">




    <ImageView
        android:id="@+id/click_taspe7"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/praise_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      />

    <TextView
        android:id="@+id/counter"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#FFC107"
        app:layout_constraintTop_toBottomOf="@id/click_taspe7"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:text="0"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/counter"
        android:text="عدد التسبيحات"
        app:layout_constraintEnd_toEndOf="@id/counter"
        app:layout_constraintStart_toStartOf="@id/counter"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/sumofcounter"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#FFC107"
        app:layout_constraintTop_toBottomOf="@id/click_taspe7"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:text="0"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/sumofcounter"
        android:text="مجموع التسبيحات"
        app:layout_constraintStart_toStartOf="@id/sumofcounter"
        app:layout_constraintEnd_toEndOf="@id/sumofcounter"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="#FFC107"
        android:text="تصفير"
        app:layout_constraintEnd_toEndOf="@+id/sumofcounter"
        app:layout_constraintTop_toBottomOf="@id/sumofcounter"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:id="@+id/praises_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginEnd="8dp"
       android:layout_marginTop="30dp"
        android:background="#FFC107"
app:layout_constraintTop_toBottomOf="@id/Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="em"
        android:gravity="center"/>





</android.support.constraint.ConstraintLayout>